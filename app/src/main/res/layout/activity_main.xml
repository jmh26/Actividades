<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#2836B5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="PM_tema3"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="20dp">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="114dp">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seminario1"
            android:gravity="center"
            android:layout_margin="30dp">

        </TextView>
        <Button
            android:id="@+id/botonEjercicio1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="abrirEjercicio1"
            android:text="Ejercicio 1" />

        <Button
            android:id="@+id/botonEjercicio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="abrirEjercicio2"
            android:text="Ejercicio 2" />

        <Button
            android:id="@+id/botonEjercicio3"
            android:layout_width="match_parent"
