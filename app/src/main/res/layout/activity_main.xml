            android:onClick="abrirEjercicio3"
            android:text="Ejercicio 3" />

        <Button
            android:id="@+id/botonEjercicio4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="abrirEjercicio4"
            android:text="Ejercicio 4" />

        <Button
            android:id="@+id/botonEjercicio5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="abrirEjercicio5"
            android:text="Ejercicio 5" />

        <Button
            android:id="@+id/botonEjercicio6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="abrirEjercicio6"
            android:text="Ejercicio 6" />

        <Button
            android:id="@+id/botonEjercicio7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="abrirEjercicio7"
            android:text="Ejercicio 7" />

        <Button
            android:id="@+id/botonEjercicio8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="abrirEjercicio8"
            android:text="Ejercicio 8" />
        <Button
            android:id="@+id/botonEjercicio9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="abrirEjercicio9"
            android:text="Ejercicio 9" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>